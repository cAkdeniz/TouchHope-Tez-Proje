@model List<SahiplendirilecekHayvanListModel>
@{ 
    int i = 0;
}

<ul>

    @foreach (var item in Model)
    {
        @if (i < 15)
        {
            i++;
            <li class="" style="height:450px;width:210px;background-color:whitesmoke">
                <div class="lost-cats-list-image">
                    <a>
                        <AnaSayfaSahiplendirResim id="@item.Id"></AnaSayfaSahiplendirResim>
                    </a>
                </div>
                <a class="lost-cats-list-text">
                    <h4 style="font-size:16px;margin:10px">@item.Aciklama</h4>
                    <h4 class="lost-cats-list-type" style="color:blue;overflow:unset;margin:5px">@item.Ad</h4>
                    <span class="lost-cats-list-country" style="margin:5px">@item.TelefonNo</span>
                    <span class="lost-cats-list-country" style="margin:5px">@item.Il.Ad</span>
                    <span class="lost-cats-list-type" style="margin:5px">@item.Tur.Ad</span>
                    <span><strong style="margin:3px">@item.OlusturulmaTarih.ToShortDateString()</strong></span>
                </a>
            </li>
        }
        else
        {

        }
    }
    
</ul>
