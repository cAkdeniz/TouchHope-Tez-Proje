@model HayvanRaporDetayModel
@{
    ViewData["Title"] = "GetirRaporlar";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    int i = 0;
}

<section class="section">
    <div class="section-body">
        <div class="row mt-sm-4">
            <div class="col-12 col-md-12 col-lg-4">
                <div class="card author-box">
                    <h4 class="text-center lead pt-2 font-27" style="font:bold;color:red">Hasta Hayvan Bilgileri</h4>
                    <div class="card-body">
                        <div class="author-box-center">
                            <getirDetayResimBuyuk id="@Model.HastaHayvan.Id"></getirDetayResimBuyuk>
                            @*<img alt="image" src="assets/img/users/user-1.png" class="rounded-circle author-box-picture">*@
                            <div class="card-body">
                                <strong style="color:blue" class="font-16">Aciliyet Durumu: </strong> <span class="badge badge-danger" style="font-size:large">@Model.HastaHayvan.Aciliyet.Tanim</span>
                                <br />
                                <br />
                                <strong style="color:blue" class="font-16">Oluşturulma Tarihi: </strong> <small style="font-size:large;color:black" class="font-16">@Model.HastaHayvan.OlusturulmaTarih.ToLongDateString()</small>
                                <br />
                                <br />
                                <p class="card-text">
                                    <strong style="color:blue" class="font-16">Açıklama: </strong> <strong class="font-16">@Model.HastaHayvan.Aciklama</strong>
                                </p>
                                <p class="card-text">
                                    <strong style="color:blue" class="font-16">Açık Adres: </strong> <strong class="font-16">@Model.HastaHayvan.AcikAdres</strong>
                                </p>
                                <p class="card-text">
                                    <strong style="color:blue" class="font-16">İl: </strong> <strong class="font-16">@Model.HastaHayvan.Il.Ad</strong>
                                </p>
                                <p class="card-text">
                                    <strong style="color:blue" class="font-16">Tür: </strong>
                                    @if (Model.HastaHayvan.Tur == null)
                                    {
                                        <strong class="font-16">Tür Belirtilmemiş</strong>
                                    }
                                    else
                                    {
                                        <strong class="font-16">@Model.HastaHayvan.Tur.Ad</strong>
                                    }
                                </p>
                                <p class="card-text">
                                    <strong style="color:blue" class="font-16">Sorumlu Gönüllü: </strong> <strong class="font-16">@Model.HastaHayvan.Kullanici.KullaniciAd @Model.HastaHayvan.Kullanici.Soyad</strong>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-12 col-md-12 col-lg-8">
                <a asp-action="GetirExcel" asp-route-id="@Model.HastaHayvan.Id" class="btn btn-icon btn-lg icon-left btn-primary"><i class="fas fa-file-excel font-25"></i>EXCEL İndir</a>
                <a asp-action="GetirPdf" asp-route-id="@Model.HastaHayvan.Id" class="btn btn-icon btn-lg icon-left btn-primary ml-2"><i class="fas fa-file-pdf font-25"></i>PDF İndir</a>
                <div class="card mt-3">
                    <div class="card-header">
                        <h4 class="font-20" style="color:green">Hayvan Hakkında Yazılan Raporlar</h4>
                    </div>
                    <div class="card-body">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col" class="font-18" style="color:blue">BASLİK</th>
                                    <th scope="col" class="font-18" style="color:blue">DETAY</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Raporlar)
                                {
                                    i++;
                                    <tr role="row" class="odd">
                                        <td class="font-15">@i</td>
                                        <td class="font-15">@item.Baslik</td>
                                        <td class="font-15">@item.Detay</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

