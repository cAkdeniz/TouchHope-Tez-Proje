@model List<BildirimListModel>
@*// #Çağatay Akdeniz //*@
@if (Model.Count > 0)
{

    @foreach (var bildirim in Model)
    {
        <div class="col-md-6">
            <div class="dialog-inner mg-t-30">
                <div class="contact-hd dialog-hd">
                    <h2>@bildirim.Baslik</h2>
                    <p>@bildirim.Mesaj</p>
                </div>
                <div class="dialog-pro dialog">
                    <a class="btn btn-success waves-effect float-right" onclick="sil(@bildirim.Id)">Okundu Olarak İşaretle</a>
                </div>
            </div>
        </div>
    }
}
else
{
    <p class="lead">
        <h2 class="text-center p-4" style="color:blue">Okunmamış bildiriminiz bulunmamaktadır.</h2>
    </p>
}
